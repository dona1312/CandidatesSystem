@model ITSystem.ViewModels.Candidates.CandidateEditVM

@{
    ViewBag.Title = "Canidate Details";
}

<div class="wrapper">
    <h3>@ViewBag.Title</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UsedTechnologies)
        </dt>
        <dd>
            @foreach (var usedTech in Model.UsedTechnologies)
            {
                if (usedTech.Selected)
                {
                    <label for="@usedTech.Value">@usedTech.Text</label>
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProgrammingLanguages)
        </dt>
        <dd>
            @foreach (var progLang in Model.ProgrammingLanguages)
            {
                if (progLang.Selected)
                {
                    <label for="@progLang.Value">@progLang.Text</label>
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "List")
    </p>
</div>