@model ITSystem.ViewModels.Candidates.CandidateListVM

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="wrapper">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidates[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidates[0].MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidates[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidates[0].Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Candidates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>